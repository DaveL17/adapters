<?xml version="1.0"?>
<Devices>

	<Device type="custom" id="tempConvertedSensor">

		<Name>Temperature Sensor Adapter</Name>

		<ConfigUI>
			<Field id="address" type="menu">
				<Label>Sensor (state):</Label>
				<List class="self" method="get_orphan_eligible_sensors"/>
			</Field>
			<Field id="nativeScale" type="menu" defaultValue="F">
				<Label>Native Temperature Scale:</Label>
				<List>
					<Option value="F">Fahrenheit</Option>
					<Option value="C">Celsius</Option>
					<Option value="K">Kelvin</Option>
					<Option value="R">Rankine</Option>
				</List>
			</Field>
			<Field id="desiredScale" type="menu" defaultValue="C">
				<Label>Desired Temperature Scale:</Label>
				<List>
					<Option value="F">Fahrenheit</Option>
					<Option value="C">Celsius</Option>
					<Option value="K">Kelvin</Option>
					<Option value="R">Rankine</Option>
				</List>
			</Field>
		</ConfigUI>

		<States>
			<State id="temperature" readonly="true">
				<ValueType>Float</ValueType>
				<TriggerLabel>Temperature</TriggerLabel>
				<ControlPageLabel>Temperature</ControlPageLabel>
			</State>
		</States>

		<UiDisplayStateId>temperature</UiDisplayStateId>

	</Device>

</Devices>
